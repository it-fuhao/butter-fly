{
  "name": "butter-fly",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "vite --host",
    "build:site": "vite build",
    "preview:site": "vite build && vite preview --host",
    "create": "node ./command/create.js",
    "build:packages": "lerna run build",
    "publish": "lerna publish",
    "lint": "eslint {**/**/*.{js,vue,ts,tsx},index.html} --fix"
  },
  "dependencies": {
    "dayjs": "^1.11.0",
    "pinia": "^2.0.13",
    "prismjs": "^1.27.0",
    "qrcode.vue": "^3.3.3",
    "vant": "^4.0.1",
    "vue": "^3.2.41",
    "vue-router": "^4.0.14"
  },
  "homepage": "https://github.com/it-fuhao/butter-fly#readme",
  "devDependencies": {
    "@types/node": "^17.0.23",
    "@types/prismjs": "^1.26.0",
    "@typescript-eslint/eslint-plugin": "^5.21.0",
    "@typescript-eslint/parser": "^5.21.0",
    "@vitejs/plugin-vue": "^3.2.0",
    "@vitejs/plugin-vue-jsx": "^3.0.0",
    "chalk": "4.0.0",
    "consola": "^2.15.3",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.7.1",
    "fs-extra": "^10.0.1",
    "inquirer": "^8.2.2",
    "lerna": "^4.0.0",
    "lint-staged": "^12.4.0",
    "log-symbols": "^5.1.0",
    "prettier": "^2.6.2",
    "sass": "^1.50.0",
    "typescript": "^4.5.4",
    "unplugin-auto-import": "^0.12.0",
    "unplugin-vue-components": "^0.22.11",
    "vite": "^3.2.3",
    "vite-plugin-dts": "^1.7.1",
    "vite-plugin-md": "0.12.4",
    "vite-plugin-prismjs": "^0.0.8",
    "vite-plugin-style-import": "^2.0.0",
    "vue-tsc": "^0.29.8",
    "yorkie": "^2.0.0"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "git add ."
    ]
  }
}
