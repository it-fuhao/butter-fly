{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "paths":{
      "@site": ["./site/*"],
      "@route": ["./route/*"],
    }
  },
  "include": ["site/**/*.ts", "site/**/*.d.ts", "site/**/*.tsx", "site/**/*.vue", "ui/**/*.vue", "ui/**/*.ts", "route/**/*.ts", "env.d.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
